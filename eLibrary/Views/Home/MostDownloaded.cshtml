@using System.Collections
@model IEnumerable<eLibrary.Models.Book>

<div class="item active" style="text-align: center;">
            @if (Model.ElementAt(0) != null)
{
    int k = 0;
    while (Model.ElementAt(k).Image == null)
    {
        k++;
    }
    <a href="@Url.Action("ShowBook", "Book", new {id = Model.ElementAt(k).Id})" style="display: inline-block;">
        @Html.Raw("<img style='height: 250px; width: 160px; opacity: 0.9;' src=\"data:image/jpeg;base64,"
                                  + Convert.ToBase64String(Model.ElementAt(k).Image) + "\" />")
    </a>
}
</div>


    @{ IEnumerable <eLibrary.Models.Book> books = Model.Skip(1);}
    @foreach (var item in books)
    {
        if (item != null)
                {
                    if (item.Image != null)
                    {
                                <div class="item" style="text-align: center; ">
                                <a href="@Url.Action("ShowBook", "Book", new {id = item.Id})" style="display: inline-block;">
                                    @Html.Raw("<img style='height: 250px; width: 160px; opacity: 0.9;' src=\"data:image/jpeg;base64,"
                                              + Convert.ToBase64String(item.Image) + "\" />")
                                </a>
                                </div>
                    }
        }

    }
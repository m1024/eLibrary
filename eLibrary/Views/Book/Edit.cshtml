@model eLibrary.Models.Book
@{
    ViewBag.title = "Edit";
}

<div class="col-sm-offset-1 col-sm-10">
    <form method="post" action="" class="form-horizontal" role="form" enctype="multipart/form-data">
        <div class="row">
            <legend>Редактирование книги</legend>
            <div class="col-sm-8">
                <div class="form-group">
                    <label for="textFb2" class="col-sm-3 control-label">Книга в fb2</label>
                    <div class="col-sm-8">
                        <input type="file" class="form-control" name="uploadText_fb2" id="textFb2">
                    </div>
                </div>

                <div class="form-group">
                    <label for="image" class="col-sm-3 control-label">Обложка</label>
                    <div class="col-sm-8">
                        <input type="file" class="form-control" name="uploadImage" id="image">
                    </div>
                </div>

                <div class="form-group">
                    <label for="bookName" class="col-sm-3 control-label">Наименование</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" name="Name" id="bookName" value="@Model.Name">
                    </div>
                </div>

                <div class="form-group">
                    <label for="bookYear" class="col-sm-3 control-label">Год издания</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" name="ImprintYear" id="bookYear" value="@Model.ImprintYear">
                    </div>
                </div>

                <div class="form-group">
                    <label for="annotation" class="col-sm-3 control-label">Аннотация</label>
                    <div class="col-sm-8">
                        <textarea cols="36" id="annotation" name="Annotation" rows="4" class="form-control input-sm">@Model.Annotation</textarea>
                    </div>
                </div>

                <div class="form-group">
                    <label for="genres" class="col-sm-3 control-label">Жанр</label>
                    <div class="col-sm-8">
                        @Html.DropDownListFor(model => model.GenreId, ViewBag.Genres as SelectList, new { @id = "genres" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="serie" class="col-sm-3 control-label">Серия</label>
                    <div class="col-sm-8">
                        @Html.DropDownListFor(model => model.SerieId, ViewBag.Series as SelectList, new { @id = "serie" })
                    </div>
                </div>


                <div class="form-group">
                    <label for="author" class="col-sm-3 control-label">Автор</label>
                    <div class="col-sm-8">
                        <input type="text" name="selectedAuthors" class="form-control input-sm" style="margin-bottom: 20px;" id="author" />
                        <script>
                            function addAuthor() {
                                var input = document.createElement('input');
                                input.type = 'text';
                                input.name = 'selectedAuthors';
                                input.className = 'form-control input-sm';
                                input.style = 'margin-bottom: 20px;';
                                var elem = document.getElementById('AuthorButton');
                                elem.parentNode.insertBefore(input, elem);
                            }
                        </script>
                        <input id="AuthorButton" type="button" onclick=" addAuthor() " value="еще автор" class="btn btn-success btn-xs form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="submit" class="col-sm-3 control-label"></label>
                    <div class="col-sm-8">
                        <input type="submit" value="Сохранить" class="btn btn-success btn-xs form-control" id="submit" />
                    </div>
                </div>

            </div>

            <div class="col-sm-4">
                <div class="form-group">
                    @if (Model.Image != null)
                    {
                        @Html.Raw("<img style='width:80%' src=\"data:image/jpeg;base64,"
                              + Convert.ToBase64String(Model.Image) + "\" />")
                    }
                </div>
            </div>
        </div>
    </form>

</div>



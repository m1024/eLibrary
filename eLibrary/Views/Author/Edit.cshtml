@model eLibrary.Models.Author

@{
    ViewBag.Title = "Edit";
}
<div class="col-md-offset-1 col-md-10">
    <h2>Редактирование</h2>
</div>
@using (Html.BeginForm("Edit", "Author", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    <form class="">

            <div class="col-sm-6 col-sm-offset-1">
                <div class="form-group">
                    <label>Изображение</label>
                    <input type="file" name="uploadImage" class="form-control"/>
                </div>

                <div class="form-group">
                    <label>Фамилия</label>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Family)
                    </div>
                </div>

                <div class="form-group">
                    <label>Имя</label>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Name)
                    </div>
                </div>

                <div class="form-group">
                    <label>Отчество</label>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Patronymic)
                    </div>
                </div>

                <div class="form-group">
                    <label>Описание</label>
                    <div class="editor-field">
                        @Html.TextAreaFor(m => m.Information, new {@class = "form-control input-sm"})
                    </div>
                </div>

                <input type="submit" value="Сохранить" class="btn btn-success btn-xs form-control"/>

            </div>

            <div class="col-sm-3">
                <div class="form-group">
                    @if (Model.Image != null)
                    {
                        @Html.Raw("<img style='width:100%' src=\"data:image/jpeg;base64,"
                                  + Convert.ToBase64String(Model.Image) + "\" />")
                    }
                </div>
            </div>
    </form>
}
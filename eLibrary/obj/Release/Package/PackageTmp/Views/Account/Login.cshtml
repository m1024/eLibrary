@using eLibrary.Models
@model eLibrary.Models.LogViewModel

@{
    ViewBag.Title = "Login";
}
    <div class="col-sm-offset-1 col-sm-10">

    <form method="post" action="" class="form-horizontal" role="form">
        <legend>Введите свой логин и пароль для входа в систему</legend>
        <div class="form-group">
            <label for="UserName" class="col-sm-1 control-label">Логин</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" name="UserName" id="UserName">
                @Html.ValidationMessageFor(model => model.UserName)
            </div>
        </div>
        <div class="form-group">
            <label for="Password" class="col-sm-1 control-label">Пароль</label>
            <div class="col-sm-4">
                <input type="password" class="form-control" name="Password" id="Password">
                @Html.ValidationMessageFor(model => model.Password)
            </div>
        </div>
        <div class="form-group">
            <label for="RememberMe" class="col-sm-1 control-label ">Запомнить</label>
            <div class="col-sm-1">
                <input type="checkbox" class="checkbox" name="RememberMe" id="RememberMe">
            </div>
            <div class="col-sm-2">
                <input type="submit" class="form-control btn btn-success btn-xs" value="Войти">
            </div>
        </div>

    </form>
</div>

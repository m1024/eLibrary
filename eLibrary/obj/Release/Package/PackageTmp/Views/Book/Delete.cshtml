@using eLibrary.Models
@model eLibrary.Models.Book

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3 class="modal-title" id="myModalLabel">Удаление книги</h3>
</div>

<div class="modal-body">
    Вы действительно хотите удалить книгу
    @Html.DisplayFor(model => model.Name)
    автора
    @foreach (Author c in Model.Authors)
    {
        @c.Name
        @c.Family
        @c.Patronymic
    }
    ?
</div>

@using (Html.BeginForm())
{
    <div class="modal-footer">
        <button type="button" class="btn btn-default btn-sm pull-left" data-dismiss="modal">Закрыть</button>
        <input type="submit" value="Удалить" class="btn btn-danger btn-sm" />
    </div>
}
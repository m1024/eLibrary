@model eLibrary.Models.Book
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
@using (Html.BeginForm("Edit", "Book", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <form class="">
        <div class="row">
            <div class="col-sm-3 col-sm-offset-1">
                <div class="form-group">
                    @if (Model.Image != null)
                    {
                        @Html.Raw("<img style='width:80%' src=\"data:image/jpeg;base64,"
                                  + Convert.ToBase64String(Model.Image) + "\" />")
                    }
                </div>
            </div>



            <div class="col-sm-6 ">

                <div class="form-group">
                    <label>Обложка</label>
                    <input type="file" name="uploadImage" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Книга Fb2</label>
                    <input type="file" name="uploadText_fb2" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Наименование</label>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Name)
                    </div>
                </div>

                <div class="form-group">
                    <label>Год издания</label>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.ImprintYear)
                    </div>
                </div>

                        <div class="form-group">
                            <label>Аннотация</label>
                            <div class="editor-field">
                                @Html.TextAreaFor(m => m.Annotation, new { @class = "form-control input-sm" })
                            </div>
                        </div>

                                <div class="form-group">
                                    <div class="editor-field">
                                        @Html.LabelFor(model => model.Genre.Name)
                                    </div>
                                    <div class="editor-field">
                                        @Html.DropDownListFor(model => model.GenreId, ViewBag.Genres as SelectList)
                                        @Html.ValidationMessageFor(model => model.GenreId)
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="editor-field">
                                        @Html.LabelFor(model => model.Serie.Name)
                                    </div>
                                    <div class="editor-field">
                                        @Html.DropDownListFor(model => model.SerieId, ViewBag.Series as SelectList)
                                        @Html.ValidationMessageFor(model => model.SerieId)
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Автор</label>
                                    <input type="text" name="selectedAuthors" class="form-control input-sm" style="margin-bottom: 20px;" />
                                    <script>
                                        function addAuthor() {
                                            var input = document.createElement('input');
                                            input.type = 'text';
                                            input.name = 'selectedAuthors';
                                            input.className = 'form-control input-sm';
                                            input.style = 'margin-bottom: 20px';
                                            var elem = document.getElementById('AuthorButton');
                                            elem.parentNode.insertBefore(input, elem);
                                        }
                                    </script>
                                    <input id="AuthorButton" type="button" onclick=" addAuthor() " value="еще автор" class="btn btn-success btn-xs form-control" />
                                </div>

                                <div class="form-group">
                                    <input type="submit" value="Сохранить" class="btn btn-success btn-xs form-control" />
                                </div>

                            </div>
                        </div>
    </form>


}